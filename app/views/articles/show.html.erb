  <%= render partial: 'nav_footer/nav' %>
        
    <div class="container">
      <div class="row">
        <div class="col s12 l10 m12">
          <div class="title">
            <h1><%= @article.title.capitalize %></h1>
          </div>
          <div class="text">
            <article class="flow-text"><%= simple_format(@article.text)%></article>
          </div>
        </div>
        <div class="col s12 l1 m12 side">
          <%= image_tag(@user.avatar, :class => "user-img responsive-img", alt: "user image") if @user.avatar.attached?%>
          <%= link_to @user.username, user_path(@user) %>
            <%= link_to vote_article_path(@article), method: :put do %>
              <span class="medium material-icons">thumb_up</span>
              <%= @article.get_upvotes.size %>
            <% end %>

            <%= link_to not_vote_article_path(@article), method: :put do %>
          <span class="medium material-icons">
              thumb_down
          </span>
              <%= @article.get_downvotes.size %>
            <% end %>



        </div>

      </div>
    </div>
<%= render partial: 'nav_footer/footer' %>
