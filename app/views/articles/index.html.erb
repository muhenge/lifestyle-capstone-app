    <%= render partial: 'nav_footer/nav' %>
    <div class="row">
      <% @articles.each do |article| %>

        <div class="col s12 m6 l3">
          <div class="card small" style="background-image: url('<%= rails_blob_url(article.image) if article.image.attached? %>');">
            <div class="card-content white-text">
              <span class="card-title"><%= link_to article.title.capitalize, article_path(article),class:"links" %></span>
            </div>
            <div class="card-action">
              <div class="row">
                <div class="col s12 m6 l6">
                  Author: <%= link_to article.user.username, user_path(current_user) %>
                </div>
                <div class="col s12 m6 l6">
                </div>
              </div>
            </div>
          </div>
        </div>

      <% end %>
    </div>
    <%= render partial: 'nav_footer/footer' %>
