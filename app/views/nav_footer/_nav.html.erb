<div class="navbar-fixed">
  <nav>
    <div class="nav-class">
      <%= link_to 'LifeBlog', home_index_path, class:'brand-logo flow-text' %>
      <ul id="nav-mobile" class="center-ul hide-on-med-and-down">
          <li><%= link_to "Home", home_index_path, class: 'login' %></li>
          <li><%= link_to "Read Articles | Vote", articles_path, class: 'login' %></li>
