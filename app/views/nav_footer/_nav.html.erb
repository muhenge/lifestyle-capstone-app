<div class="navbar-fixed">
  <nav>
    <div class="nav-class">
      <%= link_to 'LifeStyle', home_index_path, class:'brand-logo flow-text' %>
      <ul id="nav-mobile" class="center-ul hide-on-med-and-down">
        <% if @current_user %>
          <li><%= link_to "Home", home_index_path, class: 'login' %></li>
          <li><%= link_to "Read Articles | Vote", articles_path, class: 'login' %></li>
          <li><%= link_to "Add a new article", new_article_path, class: 'login' %></li>
          <li><%= link_to 'My articles', user_articles_path(@current_user), class: 'login'%></li>
